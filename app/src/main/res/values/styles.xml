<?xml version="1.0" encoding="utf-8"?>
<resources>  <!-- Base styles for the buttons -->
    <style name="PrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Color variations for each button -->
    <style name="ButtonGreen" parent="PrimaryButton">
        <item name="android:backgroundTint">#4CAF50</item>
    </style>

    <style name="ButtonBlue" parent="PrimaryButton">
        <item name="android:backgroundTint">#2196F3</item>
    </style>

    <style name="ButtonRed" parent="PrimaryButton">
        <item name="android:backgroundTint">#F44336</item>
    </style>

    <!-- Text style for labels -->
    <style name="SectionLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- EditText style for input fields -->
    <style name="InputField">
        <item name="android:padding">12dp</item>
        <item name="android:backgroundTint">#DDDDDD</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- Style for the result TextView -->
    <style name="ResultText">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#EEEEEE</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>